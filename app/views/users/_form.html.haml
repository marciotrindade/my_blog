= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f|
	= f.input :username, :input_html => { :class => 'required' }
	= f.input :password, :input_html => { :class => 'required' }
	= f.input :remember_me, :as => :boolean
	.submit
		= f.submit 'Login'
= link_to t(:signup), new_registration_path(resource_name)
%br/
= link_to t(:forgot), new_password_path(resource_name)
