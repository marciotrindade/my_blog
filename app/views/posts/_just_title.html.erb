<article>
	<header>
		<h2><%= post.linked_title %></h2>
		<time datetime="<%= post.created_at %>" pubdate><%= post.created %></time>
	</header>
	<%= strip_markdown(post.summary) %>
	<aside>
		<%= post.category_links %>
		<strong><%= link_to(t(:read_more), post.path, :class => "pjax") %></strong>
	</aside>
</article>
