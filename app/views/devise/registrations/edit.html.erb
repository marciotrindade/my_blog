<% title("Edit Profile", "profile") %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'validate' }) do |f| %>
	<div id="plans">&nbsp;</div>
	<%= f.input :username, :required => true, :input_html => { :class => "login" } %>
	<%= f.input :name,     :required => true %>
	<%= f.input :email,    :required => true %>
	
	<%= f.input :password, :required => false, :hint => t('account.profile.password') %>
	<%= f.input :password_confirmation, :required => false %>

	<%= f.input :current_password, :required => true, :hint => t('account.profile.current') %>
	
	<%= f.submit "Complete Setup" %>

	<h3>Cancel my account</h3>
	<p>Unhappy? <%= link_to t("account.remove"), registration_path(resource_name), :method => :delete, :confirm => t("web-app-theme.confirm") %>.</p>

	<%= link_to "Back", :back %>

<% end %>
