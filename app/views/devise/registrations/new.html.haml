%h2
	%a Registrar

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f|
	= devise_error_messages!

	= f.input :name
	= f.input :email
	= f.input :username
	= f.input :password
	= f.input :password_confirmation
	.submit
		= f.submit "Sign Up Now"

	= render "devise/shared/links"
