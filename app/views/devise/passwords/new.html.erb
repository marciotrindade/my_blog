<div class="content">
	<h2 class="title"><%= t(:forgot)%></h2>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "validate inner" }) do |f| %>	
		<%= devise_error_messages! %>
		<%= f.input :email %>
		<div class="submit">
			<%= f.submit "Send me reset password instructions" %>
		</div>
	<% end %>
	<p><%= render :partial => "devise/shared/links" %></p>
</div>
