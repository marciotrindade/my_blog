- title @page

ul.site_map
  li= link_to 'Home', root_path
  - @pages.each do |page|
    li= link_to page.name, page_path(page.permalink)

h2= t(:categories)
ul.site_map
  - @categories.each do |category|
    li= link_to category.name, category_path(category.permalink)

h2= t(:posts)
ul.site_map
  - @posts.each do |post|
    li= link_to post.name, post.path
