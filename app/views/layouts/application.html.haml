!!!
%html
	%head
		%meta{:content => "chrome=1", "http-equiv" => "X-UA-Compatible"}
			%meta{:content => "C50914221BE3C76FE4370CF3DA977E81", :name => "msvalidate.01"}/
			%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
			%meta{:content => "pt-BR", "http-equiv" => "content-language"}/
			%meta{:content => "Marcio Trindade", :name => "author"}/
			%meta{:content => "global", :name => "distribution"}/
			%meta{:content => "5 days", :name => "revisit-after"}/
			%meta{:content => "Marcio Trindade", :name => "copyright"}/
			%meta{:content => "width=device-width", :name => "viewport"}/
			/ = metatags(@metatag_object)
			/ %title= metatag_title(@metatag_object, AppConfig.site.name)
			/ = tag(:link, :rel => "alternate", :type => "application/atom+xml", :href => feed_url)
			%link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
			%link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
			= stylesheet_link_tag "application"
			= javascript_include_tag "application"
			= csrf_meta_tags
	%body
		#wrapper
			#top_cufon
				%h1#logo= link_to "Marcio Trindade", root_path, :name => "top", :title => "MarcioTrindade.com"
			#header
				/ = link_to "Subscribe via RSS", feed_url, :id => "rss-feed", :title => "Syndicate this site using RSS"
				#top_bar
					%ul#front_menu
						%li= link_to_menu "Home", root_path
						/ %li.page_item.page-item-2= link_to_menu "Sobre o autor", page_path("sobre-o-autor")
						/ %li.page_item.page-item-46= link_to_menu "Contato", page_path("contato")
					%form#searchform{:action => "http://www.google.com.br/search", :method => "get"}
						%input{:name => "as_sitesearch", :type => "hidden", :value => "marciotrindade.com"}/
						%input{:name => "hl", :type => "hidden", :value => "pt-BR"}/
						%input{:name => "num", :type => "hidden", :value => "50"}/
						%input{:name => "filter", :type => "hidden", :value => "0"}/
						%input#s{:name => "as_q", :size => "20", :type => "text", :value => ""}/
						%input#go{:alt => "Buscar", :title => "Buscar", :type => "submit", :value => ""}/
			#content
				#content-body
					= yield
				.content-sidebar
					/ = render :partial => '/layouts/categories'
					/ = render :partial => '/layouts/archives'
					%h3 Links
					%ul
						%li= link_to "Carlos Brando", "http://www.nomedojogo.com/"
						%li= link_to "Diego Carrion", "http://www.mouseoverstudio.com/blog"
						%li= link_to "Fabio Akita", "http://www.akitaonrails.com/"
						%li= link_to "Flavio Muniz", "http://flaviomuniz.com/blog/"
						%li= link_to "Márcio Lopes", "http://www.arteprograma.com.br/"
						%li= link_to "Philipe Casarotte", "http://www.philipecasarotte.com.br/works"
						%li= link_to "Ricardo Yasuda", "http://blog.shadowmaru.org/"
						%li= link_to "Wylkon Cardoso", "http://www.wylkon.com.br/"
			#footer
				%span.text
					Copyright © #{Date.today.year}
					= link_to "Marcio Trindade", "http://marciotrindade.com/"
					· Powered by
					= link_to "Ruby on Rails", "http://rubyonrails.org/", :target => "_blank", :title => "Ruby on Rails"
					%br
						=link_to "Lightword Theme", "http://www.lightword-theme.com/", :target => "_blank", :title => "Lightword Theme"
						by #{link_to "Andrei Luca", "http://students.info.uaic.ro/~andrei.luca/", :target => "_blank"}
						= link_to "Go to top ↑", "#top", :title => "Go to top", :class => "top"
