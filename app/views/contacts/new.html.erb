<% title @page %>

<header class="header-content">
	<h1 class="title-1"><%= @page.name %></h1>
</header>

<%= textilize(@page.body) %>

<%= form_for @contact, html: { id: "contact",  role: "form" } do |f| %>
	<fieldset>
		<div class="form-group <%= f.error_class :name %>">
			<%= f.label :name, class: "control-label" %>
			<%= f.text_field :name, class: "form-control" %>
			<%= f.errors_for :name %>
		</div>

		<div class="form-group <%= f.error_class :email %>">
			<%= f.label :email, class: "control-label" %>
			<%= f.email_field :email, class: "form-control" %>
			<%= f.errors_for :email %>
		</div>

		<div class="form-group <%= f.error_class :body %>">
			<%= f.label :body, class: "control-label" %>
			<%= f.text_area :body, class: "form-control", rows: "8" %>
			<%= f.errors_for :body %>
		</div>

		<div class="box-actions">
			<%= f.submit t('.send'), class: "btn btn-default", data: { disable_with: t('.sending') } %>
		</div>
	</fieldset>
<% end %>
