<header class="header-content">
	<h1 class="title-1">Pages</h1>
</header>

<p><%= link_to 'New Page', new_admin_page_path, class: "btn btn-primary ico-plus" %></p>

<table class="table ls-table" id="tabela1">
	<thead>
		<tr>
			<th class="txt-center">ID</th>
			<th class="txt-center">Name</th>
			<th class="txt-center">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @pages.each do |page| %>
			<tr>
				<td class="txt-center"><%= page.id %></td>
				<td><%= page.name %></td>
				<td class="txt-center">
					<%= link_to "edit", edit_admin_page_path(page) %> |
					<%= link_to "delete", admin_page_path(page), method: :delete, data: { confirm: "Are you sure?" } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
