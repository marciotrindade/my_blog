<header class="header-content">
	<h1 class="title-1">Posts</h1>
</header>

<p><%= link_to 'New Post', new_admin_post_path, class: "btn btn-primary ico-plus" %></p>

<table class="table ls-table" id="tabela1">
	<thead>
		<tr>
			<th class="txt-center">ID</th>
			<th class="txt-center">Name</th>
			<th class="txt-center">Active</th>
			<th class="txt-center">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td class="txt-center"><%= post.id %></td>
				<td><%= post.name %></td>
				<td class="txt-center"><%= post.active? %></td>
				<td class="txt-center">
					<%= link_to "edit", edit_admin_post_path(post) %> |
					<%= link_to "delete", admin_post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
