<%= form_for([:admin, @post]) do |f| %>
	<fieldset>
		<div class="form-group <%= f.error_class :name %>">
			<%= f.label :name,      class: "control-label" %>
			<%= f.text_field :name, class: "form-control" %>
			<%= f.errors_for :name %>
		</div>

		<div class="form-group">
			<%= f.label :summary,     class: "control-label" %>
			<%= f.text_area :summary, class: "form-control", rows: "8" %>
		</div>

		<div class="form-group <%= f.error_class :body %>">
			<%= f.label :body,     class: "control-label" %>
			<%= f.text_area :body, class: "form-control", rows: "20" %>
			<%= f.errors_for :body %>
		</div>

		<div class="form-group <%= f.error_class :keywords %>">
			<%= f.label :keywords,     class: "control-label" %>
			<%= f.text_field :keywords, class: "form-control" %>
			<%= f.errors_for :keywords %>
		</div>

		<div class="form-group <%= f.error_class :page_body %>">
			<%= f.label :page_body,     class: "control-label" %>
			<%= f.text_area :page_body, class: "form-control", rows: "4" %>
			<%= f.errors_for :page_body %>
		</div>

		<div class="checkbox">
			<%= f.check_box :active %>
			<%= f.label :active %>
		</div>

		<div class="box-actions">
			<%= f.submit 'Send', disable_with: 'Sending', class: "btn btn-success" %>
			<%= link_to 'Back', admin_posts_path,         class: "btn btn-default" %>
		</div>
	</fieldset>
<% end %>
