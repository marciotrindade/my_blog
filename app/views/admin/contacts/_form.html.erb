<%= form_for([:admin, @contact], html: { class: "ls-form" }) do |f| %>
  <fieldset>
    <label class="ls-label <%= f.error_class :name %>">
      <b class="ls-label-text">Name</b>
      <%= f.text_field :name %>
      <%= f.errors_for :name %>
    </label>

    <label class="ls-label <%= f.error_class :email %>">
      <b class="ls-label-text">Email</b>
      <%= f.email_field :email %>
      <%= f.errors_for :email %>
    </label>

    <label class="ls-label <%= f.error_class :body %>">
      <b class="ls-label-text">Body</b>
      <%= f.text_area :body, rows: "20", class: 'ls-textarea-resize-vertical' %>
      <%= f.errors_for :body %>
    </label>

    <%= f.submit 'Send', class: "ls-btn-primary", data: { disable_with: 'Sending ...' } %>
    <%= link_to 'Back', admin_contacts_path, class: "ls-btn" %>
  </fieldset>
<% end %>
