<% admin_title("Contacts", "ls-ico-envelope") %>

<table class="ls-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= l contact.created_at %></td>
        <td>
          <%= link_to "edit", edit_admin_contact_path(contact), class: "ls-ico-pencil" %> |
          <%= link_to "delete", admin_contact_path(contact), method: :delete, data: { confirm: "Are you sure?" }, class: "ls-ico-remove" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
